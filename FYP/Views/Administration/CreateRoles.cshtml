@model CreateRoles

<center><label class="text-white fw-bold text-uppercase">Create Role</label></center>

<form method="post" enctype="multipart/form-data" asp-action="CreateRoles" asp-controller="Administration">

    <!-- Modal -->
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="modal fade" id="_createrole" tabindex="-1" role="dialog" aria-labelledby="createrole" aria-hidden="true">
        <div class="modal-dialog " role="document">
            <div class="modal-content text-white bg-black bg-opacity-75">
                <div class="modal-header text-white bg-black bg-opacity-75">
                    <h5 class="modal-title" id="createrole">Modal title</h5>
                    <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label class="form-label" asp-for="@Model.RoleName"></label>
                        <input class="form-control" asp-for="@Model.RoleName" />
                        <span asp-validation-for="@Model.RoleName" class="text-danger"></span>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Create Role</button>
                </div>
            </div>
        </div>
    </div>

</form>