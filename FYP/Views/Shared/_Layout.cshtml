@inject Microsoft.AspNetCore.Http.IHttpContextAccessor Accessor
@inject Microsoft.AspNetCore.Identity.SignInManager<ApplicationUser> manager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - StudentConnect</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/StudentConnect.styles.css" asp-append-version="true" />
    <link href="~/css/pagedlist.css" rel="stylesheet" />
    <script src="~/jquery/jquery.min.js"></script>
  
    <script src="~/jquery/jquery.js"></script>
    

  
    <script src="~/twitter-bootstrap/js/bootstrap.min.js"></script>
    <script src="~/twitter-bootstrap/js/bootstrap.bundle.min.js"></script>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-black bg-opacity-25 border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand text-white" >StudentConnect</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">

                    <ul class="navbar-nav flex-grow-1">

                        <li class="nav-item mx-2 @(ViewContext.RouteData.Values["Action"].ToString() == "Dashboard" ? "btn-primary" : "" ) ">
                            <a class="nav-link text-white btn btn-outline-light  bg-black bg-opacity-50" asp-action="Dashboard" asp-controller="Dashboard">Dashboard</a>
                        </li>
                        
                        <li class="nav-item mx-2  @(ViewContext.RouteData.Values["Action"].ToString() == "ContactUs" ? "btn-primary" : "" )">
                            <a class="nav-link text-white btn btn-outline-light bg-black bg-opacity-50" asp-area="" asp-controller="Home" asp-action="ContactUs">Contact Us</a>
                        </li>
                        <li class="nav-item mx-2 ">
                            <a class="nav-link text-white btn btn-outline-light bg-black bg-opacity-50" asp-area="" asp-controller="Administration" asp-action="RolesList">RolesList</a>
                        </li>
                        <li class="nav-item mx-2 bg-black bg-opacity-50">
                            <a class="nav-link text-white btn btn-outline-light @(Accessor.HttpContext.Request.Path.Value == "/news&events" ? "btn-primary" : "")" asp-area="" asp-controller="Administration" asp-action="CreateRoles">Create Roles</a>
                        </li>
                        <li class="nav-item mx-2 bg-black bg-opacity-50">
                            <a class="nav-link text-white btn btn-outline-light" asp-area="" asp-page="/Privacy">Send Email</a>
                        </li>

                    </ul>

                    <ul class="navbar-nav flex-grow-1">
                        @if(!User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item mx-2 bg-black bg-opacity-50">
                                <a class="nav-link text-white btn btn-outline-light @(Accessor.HttpContext.Request.Path.Value == "/SignIn" ? "btn-primary" : "")" asp-area=""  asp-action="SignIn" asp-controller="Account">SignIn</a>
                            </li>
                            <li class="nav-item mx-2 bg-black bg-opacity-50">
                                <a class="nav-link text-white btn btn-outline-light @(Accessor.HttpContext.Request.Path.Value == "/SignUp" ? "btn-primary" : "")" asp-area="" asp-action="SignUp" asp-controller="Account">SignUp</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item mx-2 ">
                                <partial name="_ProfileDropdown"></partial>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            <i class="fa-thin fa-circle-info"></i>
            @RenderBody()
        </main>
    </div>

    @if (ViewData["render"] == "render")
    {

        <footer class="border-top footer @ViewData["color"] ">
            <div class="container">
                &copy; 2023 - StudentConnect - <a asp-area="" asp-page="/Privacy">Privacy</a>
            </div>
        </footer>
    }


    <script src="~/js/site.js" asp-append-version="true"></script>
    <partial name="_ValidationScriptsPartial"></partial>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>