@model FYP.Models.Dashboard.Discussion
@{
    Layout = "_Layout";

}

<body style="" class="links-background">

</body>


<div class="row signin-pageContent col-5">
    <div class="text-white bg-black bg-opacity-50 p-3 rounded">
        <center><label class="text-white fw-bold text-uppercase fs-2 text-success"> Discussion </label></center>
        <hr />

        <form asp-action="AskQuestion" asp-controller="Dashboard" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group m-1">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control text-white bg-black bg-opacity-50" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group m-1">
                <label asp-for="Sub_Title" class="control-label"></label>
                <input asp-for="Sub_Title" class="form-control text-white bg-black bg-opacity-50" />
                <span asp-validation-for="Sub_Title" class="text-danger"></span>
            </div>
            <div class="form-group m-1">
                <label asp-for="Question" class="control-label"></label>
                <textarea asp-for="Question" class="form-control text-white bg-black bg-opacity-50" ></textarea>
                <span asp-validation-for="Question" class="text-danger"></span>
            </div>            
            <div class="form-group mt-2">
                <input type="submit" value="Ask Question" class="btn btn-primary hover" />
                <a asp-action="Discussion" asp-controller="Dashboard" class="btn btn-info hover">All Question</a>
            </div>
        </form>
    </div>
</div>
