@using X.PagedList.Mvc.Core; @*import this so we get our HTML Helper*@
@using X.PagedList; @*import this so we can cast our list to IPagedList (only necessary because ViewBag is dynamic)*@
@using X.PagedList.Mvc.Core.Fluent
@using X.PagedList.Web.Common
@model IEnumerable<FYP.Models.Dashboard.Discussion>

@{
    Layout = "_Layout";
    ViewData["Title"] = "Discussion";
    var pagedList = (IPagedList)ViewBag.discus;
}

<body style="" class="links-background">

</body>

@if (TempData["QAdded"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert" style="z-index:1">
        <strong>Question created Successfully ||</strong> A new Question has been asked by <strong class="text-success">@ViewBag.AskerName</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (TempData["QDeleted"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert" style="z-index:1">
        <strong>Question deleted Successfully ||</strong> A question has been deleted.
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>


    <div class="row">
        <div class="col-8 bg-black bg-opacity-75 signin-pageContent p-4 rounded" style="height:85vh;">

            <div class="text-center ">
                <a asp-action="AddLinks" asp-controller="Dashboard" class="btn btn-light col-3 mx-1">Add a new Link</a>
            </div>
            <hr />

            <center>
                <h1 class="text-white bg-white bg-opacity-10 text-white rounded">Discussion</h1>
                <p>Ask questions frequently.Regarding to your Studies</p>
            </center>
            <center >

                @Html.PagedListPager(pagedList,
                page => Url.Action("Discussion","Dashboard",
                new { page }),
                new PagedListRenderOptions()
                {
                DisplayItemSliceAndTotal = true,
                ItemSliceAndTotalPosition = ItemSliceAndTotalPosition.End,
                MaximumPageNumbersToDisplay=3
                })

            </center>
            @if (Model?.Any() == false)
            {
                <center><label class="text-white fw-bold text-uppercase"> No Questions </label></center>
            }
            else
            {
                <div class="overflow-scroll p-3" style="height:54vh;">
                    @foreach (var item in Model)
                    {


                        <center>
                            <div class="row mb-2 w-100">
                               
                                <div class="border bg-black bg-opacity-50 text-white col-8 row m-0 flex-grow-1">

                                    <div class="col-4 d-flex">
                                        <label asp-for="@item.Title" class="text-success fw-bold d-block mx-2 text-uppercase"></label> :
                                        @Html.DisplayFor(x=>@item.Title)
                                    </div>

                                    <div class="col-8 d-flex border-start">
                                        <label asp-for="@item.Sub_Title" class="text-info fw-bold d-block mx-2 text-uppercase"></label> :
                                        @Html.DisplayFor(x=>@item.Sub_Title)
                                    </div>

                                    <div class="w-100"></div>
                                    <hr>
                                    <div class="d-flex">
                                        <label asp-for="@item.Question" class="text-light fw-bold d-block text-uppercase"></label> :
                                        @Html.DisplayFor(x=>@item.Question)
                                    </div>
                                </div>

                                <div class="col-3 col-lg-2 border m-0 row">
                                    <div class="my-auto d-xl-flex">

                                        <a asp-action="DeleteLink" asp-controller="Dashboard" class="btn btn-outline-danger m-1" asp-route-id="@item.id">See Answers</a>

                                        <a asp-action="DeleteLink" asp-controller="Dashboard" class="btn btn-outline-danger m-1" asp-route-id="@item.id">Delete</a>

                                    </div>
                                </div>
                            </div>
                        </center>
                        <hr />
                    }
                </div>
            }
           
        </div>
    </div>
</form>
