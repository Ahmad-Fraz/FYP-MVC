@model FYP.Models.Dashboard.CourseList
@{
}

<div class="card bg-primary bg-opacity-25 text-white my-2">
    <div class="card-header bg-black">
        <labe class="fw-bold">@Model.CourseNo : </labe>
        <label>@Model.CourseTitle </label>
    </div>
    <div class="card-body row">
        <div class="col-8">
            <label>@Model.CourseShortDescription</label>
        </div>
        <div class="col-4 d-block m-auto">
            <a class="btn btn-outline-info" asp-action="CourseDetails" asp-controller="Dashboard" asp-route-id="@Model.id">Details</a>
        </div>
    </div>
    <div class="card-footer bg-black bg-opacity-75">
        <div>
            <label class="text-success fw-bold">Degree : @Model.DegreeName</label>
            <label class="text-danger fw-bold d-block">Department : @Model.Department</label>
        </div>

    </div>
</div>

